{
	"manifest_version": 3,
	"name": "Token Sync",
	"version": "1.0.2",
	"description": "Captura token e sincroniza com o backend",


	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	  },

	"permissions": ["storage", "activeTab", "scripting"],

	"host_permissions": [
		"https://filtrodeapostas.com/*",
		"https://paullosergio.github.io/*",
		"https://oddscanner.onrender.com/*"
	],

	"action": {
		"default_popup": "popup.html"
	},

	"browser_specific_settings": {
		"gecko": {
			"id": "tokensync@paulosergio.com",
			"data_collection_permissions": {
				"required": ["none"],
				"optional": []
			}
		}
	}
}
